{
  "name": "little-bit",
  "version": "1.0.3",
  "type": "module",
  "description": "Інсталятор українських перекладів відеоігор",
  "main": "out/main/index.js",
  "author": {
    "name": "Little Bit UA",
    "email": "info@littlebit.org.ua"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "preview": "electron-vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.littlebit.launcher",
    "productName": "Little Bit",
    "copyright": "Copyright © 2024 Little Bit UA",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "out/**/*"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "store",
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "littlebit-launcher"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Little Bit UA",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Little Bit UA <info@littlebit.org.ua>"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "differentialPackage": false
    },
    "electronDist": "node_modules/electron/dist",
    "electronVersion": "28.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
